server {
    # server for domain pointed to this nginx server 
    listen 8080;
    server_name ~^(?<subdomain>(www.))(?<app_host>(somedomain.com|someotherdomain.com))(?<local>(|\.localhost))$;
    root /var/www/html/public;
    error_page 500 502 503 504 /error.html;
    set $service_name extra-app;

    real_ip_header X-Forwarded-For;
    set_real_ip_from 192.168.0.0/16;

    location /nginxhealth {
        add_header Content-Type application/json;
        return 200 '{"app":"nginx-proxy","status":"ok","server":"public"}';
    }

    location ~ /\. {
        try_files /dev/null @deny;
    }

    location ~ \.php {
        try_files /dev/null @deny;
    }

    location ~ ^/(.*)\.(ico|js|css|jpg|png|mp4|pdf)$ {
        expires 90d;
        try_files /$service_name$uri @external;
    }

    location ~ ^/(.*)\.(css|js)$ {
        expires 7d;
        try_files /$service_name$uri @external;
    }

    location /error.html {
        root /usr/share/nginx/html;
        internal;
    }

    location / {
        try_files /dev/null @application;
    }

    location @application {
        resolver ${NGINX_LOCATION_RESOLVER};
        include fastcgi_params;
        fastcgi_param HTTP_DATING_SITE $app_host;
        fastcgi_param HTTP_SERVICE_NAME $service_name${NGINX_SERVICE_NAME_FQDN_ADDITION};
        fastcgi_param SCRIPT_FILENAME $document_root/index.php;
        fastcgi_pass $service_name${NGINX_SERVICE_NAME_FQDN_ADDITION}:9000;
    }

    location @deny {
        deny all;
    }

    location @external {
        expires 30s;
        return 301 https://somecdn_or_static_bucket/$server_name$request_uri;
    }
}
